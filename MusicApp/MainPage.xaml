<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.MainPage"
             BackgroundColor="#EEF5E6">

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <Grid Grid.RowSpan="4" RowDefinitions="Auto, *, Auto" BackgroundColor="Transparent">
            <ScrollView Grid.Row="0">
                <Border Stroke="Black" StrokeThickness="1" BackgroundColor="#A9E4A3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,40,40,40" />
                    </Border.StrokeShape>
                </Border>
            </ScrollView>

            <ScrollView Grid.Row="1">
                <Border BackgroundColor="#FFFFFF" Padding="10" Margin="10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,40,40,40" />
                    </Border.StrokeShape>
                    <StackLayout Margin="0,10">
                        <StackLayout Padding="10">
                            <Label Text="Playlist #1" FontAttributes="Bold" FontSize="20" TextColor="Black"/>
                            <Label Text="Jakaś tam playlista" FontSize="14" TextColor="Gray"/>
                            <Button Text="+" 
                                    Grid.Column="2" 
                                    Grid.Row="0" 
                                    HorizontalOptions="End" 
                                    Margin="0,0,10,0" 
                                    FontSize="20" 
                                    BackgroundColor="White" 
                                    TextColor="Black"
                                    x:Name="AddSongButton"
                                    Clicked="AddSongButton_Clicked">
                            </Button>
                        </StackLayout>

                        <CollectionView Grid.Row="2"
                                        Grid.ColumnSpan="3"
                                        Margin="5"
                                        x:Name="SongsCollectionView"
                                        SelectionMode="Single"
                                        SelectionChanged="SongsCollectionView_SelectionChanged">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="0,5" BackgroundColor="#E8E8E8" Stroke="Transparent" >
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12,12,12,12" />
                                        </Border.StrokeShape>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Song_Tapped" NumberOfTapsRequired="1"/>
                                        </Border.GestureRecognizers>
                                        <HorizontalStackLayout>
                                            <Label Text="{Binding Title}" 
                                                   FontSize="16" 
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="StartAndExpand"/>
                                        </HorizontalStackLayout>
                                    </Border>
                                </DataTemplate> 
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Border>
            </ScrollView>

            <StackLayout Grid.Row="2" Padding="10">
                <Border Stroke="LightGray"
                        StrokeThickness="1" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Wyszukaj utwór"/>
                </Border>

                <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <Button x:Name="BottomAddButton" Text="Zapisz" BackgroundColor="#000000" TextColor="White" HorizontalOptions="FillAndExpand" WidthRequest="100" Clicked="SaveSongsToFile_Clicked"/>
                    <Button x:Name="DeleteButton" Text="Usuń" BackgroundColor="#000000" TextColor="White" HorizontalOptions="FillAndExpand" WidthRequest="100" Clicked="DeleteSongButton_Clicked"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
