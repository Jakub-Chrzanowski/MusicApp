<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.MainPage"
             BackgroundColor="#EEF5E6">

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <Grid Grid.RowSpan="4" RowDefinitions="Auto, *, Auto" BackgroundColor="Transparent">
            <ScrollView Grid.Row="0">
                <Border Stroke="Black" StrokeThickness="1" BackgroundColor="#A9E4A3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,40,40,40" />
                    </Border.StrokeShape>
                </Border>
                
            </ScrollView>
            

            <ScrollView Grid.Row="1">
                <Border BackgroundColor="#FFFFFF" Padding="10" Margin="10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,40,40,40" />
                    </Border.StrokeShape>
                    <StackLayout Margin="0,10">
                        <StackLayout Padding="10">
                            <Label Text="Playlist #1" FontAttributes="Bold" FontSize="20" TextColor="Black"/>
                            <Label Text="Jakaś tam playlista" FontSize="14" TextColor="Gray"/>
                        </StackLayout>
                        <Button Text="Utwór 1" BackgroundColor="#E8E8E8" TextColor="Red" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 2" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 3" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 4" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 5" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 6" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                        <Button Text="Utwór 7" BackgroundColor="#E8E8E8" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="0,5" CornerRadius="50" IsEnabled="False"/>
                    </StackLayout>
                </Border>
            </ScrollView>

    
            <StackLayout Grid.Row="2" Padding="10">
                <Border Stroke="LightGray"
        StrokeThickness="1" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10" />
                    </Border.StrokeShape>
                    <Entry
            Placeholder="Wyszukaj utwór">
                    </Entry>
                </Border>


                <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <Button Text="Dodaj" BackgroundColor="#000000" TextColor="White" HorizontalOptions="FillAndExpand" WidthRequest="100"/>
                    <Button Text="Usuń" BackgroundColor="#000000" TextColor="White" HorizontalOptions="FillAndExpand" WidthRequest="100"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
